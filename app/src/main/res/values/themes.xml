<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SSF2022" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/edcan_blue</item>
        <item name="colorPrimaryVariant">@color/edcan_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/edcan_gray</item>
        <item name="colorSecondaryVariant">@color/edcan_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="textColor">@color/flatBlack</item>

        <item name="button1TextColor">@color/white</item>
        <item name="button1BackgroundColor">@color/edcan_blue</item>

        <item name="button2TextColor">@color/white</item>
        <item name="button2BackgroundColor">@color/edcan_gray</item>

        <item name="inputTextColor">@color/flatBlack</item>
        <item name="inputBackgroundColor">#E9E9E9</item>

        <item name="toolbarBackgroundColor">@color/white</item>

        <!-- Custom Style -->
        <item name="android:textViewStyle">@style/customTextStyle</item>
        <item name="android:buttonStyle">@style/customButton1Style</item>
        <item name="editTextStyle">@style/customEditTextStyle</item>

        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="customTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="customButton1Style" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/button1TextColor</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingVertical">12dp</item>

<!--        <item name="android:backgroundTint">?attr/button1BackgroundColor</item>-->
        <item name="android:background">@drawable/sc_button_enabled</item>
    </style>

    <style name="customButton2Style" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/button2TextColor</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingVertical">12dp</item>

        <item name="android:backgroundTint">?attr/button2BackgroundColor</item>
        <item name="android:background">@drawable/sh_square_15</item>
    </style>

    <style name="customButton3Style" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/edcan_blue</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingVertical">12dp</item>

        <item name="android:background">@drawable/sh_button3</item>
    </style>

    <style name="customEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/inputTextColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColorHint">#949494</item>

        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>

        <item name="android:backgroundTint">?attr/inputBackgroundColor</item>
        <item name="android:background">@drawable/sh_square_15</item>
    </style>
</resources>